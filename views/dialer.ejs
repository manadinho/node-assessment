<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=Exo" rel="stylesheet" />
    <link
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/dialer.css" />
    <title>Webphone</title>
  </head>
  <body>
    <div class="container" id="dialler-section">
      <div id="output"></div>
      <div class="row">
        <div class="digit" id="one">1</div>
        <div class="digit" id="two">
          2
          <div class="sub">ABC</div>
        </div>
        <div class="digit" id="three">
          3
          <div class="sub">DEF</div>
        </div>
      </div>
      <div class="row">
        <div class="digit" id="four">
          4
          <div class="sub">GHI</div>
        </div>
        <div class="digit" id="five">
          5
          <div class="sub">JKL</div>
        </div>
        <div class="digit">
          6
          <div class="sub">MNO</div>
        </div>
      </div>
      <div class="row">
        <div class="digit">
          7
          <div class="sub">PQRS</div>
        </div>
        <div class="digit">
          8
          <div class="sub">TUV</div>
        </div>
        <div class="digit">
          9
          <div class="sub">WXYZ</div>
        </div>
      </div>
      <div class="row">
        <div class="digit">*</div>
        <div class="digit">0</div>
        <div class="digit">#</div>
      </div>
      <div class="botrow">
        <i class="fa fa-star-o dig" aria-hidden="true"></i>
        <button id="call" onclick="initiateCall()">
          <i class="fa fa-phone" aria-hidden="true"></i>
        </button>
        <i class="fa fa-long-arrow-left dig" aria-hidden="true"></i>
      </div>
    </div>

    <div class="container" id="calling-section">
      <!-- <i class="fa fa-phone fa-lg calling-icon" aria-hidden="true"></i>
      <p class="dialed-phone-number"></p> -->
      <div>
        <img
          src="/images/outbound-call.png"
          class="outbound-call-image"
          alt=""
        />
      </div>
      <div style="display: flex">
        <p class="outbound-call-text">
          Outbound call Initiated, Please check the Softphone
        </p>
      </div>
    </div>

    <div class="container" id="inprogress-section">
      <!-- <i class="fa fa-phone fa-lg calling-icon" aria-hidden="true"></i> -->
      <p class="dialed-phone-number"></p>
      <div id="call-timer">00:00:00</div>
      <div style="height: 300px"></div>
      <div class="call-end-section">
        <button id="call-end" onclick="endCall()">
          <i class="fa fa-phone" aria-hidden="true"></i>
        </button>
      </div>
    </div>

    <script src="/js/dialer.js"></script>
    <script>
      const PLATFORM = "<%= platform %>";
      const PLATFORM_USER_ID = "<%= userid %>";
      const query_parameter_number = "<%= phone_number %>";
      if (query_parameter_number) {
        query_parameter_number.split("").forEach((digit) => {
          appendNumber(digit);
        });
      }
    </script>
  </body>
</html>
